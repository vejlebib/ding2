      ],
      'template' => 'templates/ting-subsearch-bibdk-message-box',
    ],
    'ting_subsearch_bibdk_message_box_items_list' => [
      'variables' => [
        'items' => NULL,
      ],
      'template' => 'templates/ting-subsearch-bibdk-message-box-items-list',
